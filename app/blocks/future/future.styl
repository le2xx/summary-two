.future
	display block
	margin-top 34px
	margin-left -1px

	&__title
		font-size 24px
		font-weight 700
		line-height 50px
		color #2f1b15

	&__text
		margin-top -5px
		font-size 15px
		font-weight 400
		line-height 23px
		color #3d3d3d
		margin-left 2px
		margin-bottom: 6px;

	&__label
		display inline-block
		width 41px
		height 45px
		vertical-align middle
		cursor pointer
		background url('../../assets/images/radio.png') no-repeat
		margin-left -7px

	& input:checked ~ .future__checked-img
		display block

	&__input
		display none

	&__item-text
		margin-left -5px
		margin-right 21px
		display inline-block
		font-size 20px
		font-weight 700
		line-height 25px
		vertical-align middle
		color #000

	&__checked-img
		position relative
		left 9px
		bottom -13px
		display none
		width 23px
		height 27px
		background url('../../assets/images/radio_checked.png') no-repeat
