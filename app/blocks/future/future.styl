.future
	margin 34px 0 0 -1px
	display block

	&__title
		title-font()

	&__text
		margin -5px 0 6px 2px
		text-font()

	&__label
		margin-left -7px
		display inline-block
		width 41px
		height 45px
		vertical-align middle
		cursor pointer
		background url('../../assets/images/radio.png') no-repeat

	& input:checked ~ .future__checked-img
		display block

	&__input
		display none

	&__item-text
		margin 0 21px 0 -5px
		display inline-block
		font-size 20px
		font-weight 700
		line-height 25px
		vertical-align middle
		color $black-color

	&__checked-img
		position relative
		left 9px
		bottom -13px
		display none
		width 23px
		height 27px
		background url('../../assets/images/radio_checked.png') no-repeat
