.person-data
	margin-top 59px
	display block

	&__item
		margin 13px 117px 0 0
		display flex

	&__label
		title-font()
		margin-right 16px
		font-size 22px
		flex none

	&__input
		input-font()
		flex 1
		padding-left 15px
		padding-bottom 17px
		height 38px
		background url('../../assets/images/string.png') center no-repeat
		background-position-y bottom
		border none

	&__input[type='number']
		-moz-appearance textfield

		&::-webkit-inner-spin-button, &::-webkit-outer-spin-button
			-webkit-appearance none
			margin 0

